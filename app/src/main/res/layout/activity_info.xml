<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.InfoActivity">

    <ImageView
        android:id="@+id/ivInfoActivity"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.187"
        tools:srcCompat="@tools:sample/avatars" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilInfoActivity"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="16"
        app:helperText="C. AutÃ³noma"
        app:helperTextTextColor="@color/azul"
        android:autofillHints=""
        android:inputType="text"
        android:hint=""
        app:layout_constraintEnd_toEndOf="@+id/ivInfoActivity"
        app:layout_constraintStart_toStartOf="@+id/ivInfoActivity"
        app:layout_constraintTop_toBottomOf="@+id/ivInfoActivity">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etInfoActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btCambiar"
        android:layout_width="150dp"
        android:layout_height="66dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:textSize="16dp"
        android:text="@string/cambiar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tilInfoActivity" />

    <Button
        android:id="@+id/btCancelar"
        android:layout_width="150dp"
        android:layout_height="66dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:textSize="16dp"
        android:text="@string/cancelar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tilInfoActivity" />
</androidx.constraintlayout.widget.ConstraintLayout>